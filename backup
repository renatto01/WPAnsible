---


- name: provisionamento da VM
  hosts: all
  user: vagrant
  become: true

  tasks:
    - name: instalando epel repositorio
      yum:
        name: epel-release
        state: present

    - name: instalando nginx
      yum:
        name:
          - nginx
          - htop
        state: present

    - name: Ativando e Iniciando Nginx
      service:
        name: nginx
        state: started
        enabled: yes


    - name: Instalando a dependencia do MySql para comunicacao com python
      yum:
        name:
            - MySQL-python

    - name: Desativando SElinux
      selinux:
        state: disabled

    - name: instalar MariaDB
      yum:
        name: mariadb-server
        state: present


    - name: Ativando Mysql
      service:
        name: mariadb
        state: started
        enabled: yes

    - name: Criando uma novo Banco com nome 'wordpress'
      mysql_db:
        name: wordpress
        state: present

    - name: Criando usuario no Banco
      mysql_user:
        name: root
        password: ""
        priv: '*.*:ALL,GRANT'
        state: present


    - name: instalando php-fpm
      yum:
        name: php-fpm
        state: present

    - name: Instalando o php-mysql
      yum:
        name: php-mysql
        state: present

    - name: Ativar php-fpm
      service:
        name: php-fpm
        state: started
        enabled: true

    - name: Criando arquivo php info
      copy:
       dest: "/usr/share/nginx/html/info.php"
       content: <?php phpinfo() ?>

    - name: Configura php-fpm no nginx
      copy:
        dest: /etc/nginx/conf.d/localhost.conf
        content: '
        server {
            listen 80;
            server_name localhost;
            root /usr/share/nginx/html;
            index index.php index.html index.htm;

            location ~ \.php$ {
                fastcgi_split_path_info ^(.+\.php)(/.+)$;
                fastcgi_pass 127.0.0.1:9000;
                fastcgi_index index.php;
                fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
                include fastcgi_params;
            }
        }'

    - name: Reinicia o nginx
      service:
        name: nginx
        state: reloaded

  #TESTE COMMIT

   # - name: modulo alternativo Baixando pasta Wordpress e Forcando instalacao
    #  get_url:
     #   url: https://wordpress.org/latest.tar.gz
      #  dest: /usr/share/nginx/html
       # force_basic_auth: yes

    #- name: Extraindo Pasta Wordpress
     # unarchive:
      #  src: wordpress-4.9.7.tar.gz
       # dest: /usr/share/nginx/html


    - name: Baixando Wordpress e Descompactando
      unarchive:
        src: https://wordpress.org/latest.tar.gz
        dest: /usr/share/nginx/html
        remote_src: yes

    - name: Alterando permiss√£o da pasta wordpress
      file:
        path: "/usr/share/nginx/html/wordpress"
        state: directory
        owner: nginx
        group: nginx
        mode: 0777
